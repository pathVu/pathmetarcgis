<Window x:Class="PathMet_V2.UserMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathMet_V2"
        mc:Ignorable="d"
        Title="UserMessageBox"
        WindowStyle="SingleBorderWindow"
        WindowStartupLocation="CenterScreen">
    <Border Margin="10">
        <Grid x:Name="contentGrid" Margin="0,0,0,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <TextBlock x:Name="messageBox" Text="" Grid.Row="0" Margin="20" FontSize="18" HorizontalAlignment="Center"  TextWrapping="Wrap" VerticalAlignment="Center"/>
            <Border Grid.Row="1" Background="#FFCDCDCD" >
                <StackPanel x:Name="buttonsPanel" Grid.Row="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
                    
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
