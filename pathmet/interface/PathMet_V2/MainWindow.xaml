<Window x:Class="PathMet_V2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PathMet_V2" 
        xmlns:esri="http://schemas.esri.com/arcgis/runtime/2013"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Closing="Window_Closing">
    
    
    
    <!-- Overall panel grid-->
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="4*"/>
        </Grid.ColumnDefinitions>
        <esri:MapView x:Name="MyMapView" Grid.Column="0"/>
        <TextBlock x:Name="StatusTxt" Grid.Column="0" Text="Choose a Starting Point" Margin="5,3,5,0" VerticalAlignment="Top" HorizontalAlignment="Left" FontSize="16" Padding="5,0" UseLayoutRounding="False"/>
        <StackPanel x:Name="PastRunDistContainer" Grid.Column="0" Orientation="Horizontal" HorizontalAlignment="Right" VerticalAlignment="Top" Visibility="Hidden">
            <TextBlock x:Name="pastRunDistLabel" Grid.Column="0" Text="Past Run:" Margin="2,1" VerticalAlignment="Top"  FontSize="16" Padding="5,0" UseLayoutRounding="False"/>
            <TextBlock x:Name="pastRunDistTxt" Grid.Column="0" Margin="5,3,5,0" VerticalAlignment="Top"  FontSize="16" Padding="5,0" UseLayoutRounding="False"/>
        </StackPanel>
        
        <!-- Drawing edit and restart buttons-->
        <StackPanel x:Name="pathDrawingControls" Margin="5,5,5,20" HorizontalAlignment="Center" VerticalAlignment="Bottom" Visibility="Visible" Orientation="Horizontal" Grid.Column="0">
            <Button Content="Edit" x:Name="editBtn" Margin="5" Padding="5" Click="EditButtonClick" FontSize="14" />
            <Button Content="Undo" x:Name="undoBtn" Margin="5" Padding="5" FontSize="14" Click="UndoLastVertex" />
            <Button Content="Redo" x:Name="redoBtn" Margin="5" Padding="5" FontSize="14" Command="{Binding RedoCommand}"/>
            <Button Content="Done" x:Name="doneBtn" Margin="5" Padding="5"  FontSize="14" Command="{Binding CompleteCommand}" Click="doneDrawingLine_Click"/>
        </StackPanel>

        
        <StackPanel Grid.Column="1" VerticalAlignment="Center" x:Name="RunControlsPanel" >
            <Grid x:Name="UserInfoContainer">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="3*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <ComboBox x:Name="UserMapsBox" Grid.Column="0" Padding="5,2" SelectionChanged="MapChosen">
                    <ComboBoxItem Content="-- Select Map --" IsSelected="True" />
                </ComboBox>
                <Button x:Name="loginBtn" Grid.Column="1" Content="Login" Padding="0" Margin="15,0" Click="loginBtn_Click" />
            </Grid>
            <TextBlock HorizontalAlignment="Center" Margin="0,10" FontSize="16">Welcome to PathMet</TextBlock>
            <Grid Margin="10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" Content="PathMet Connection" Name="chkbxPm" Background="Red" IsHitTestVisible="False"/>
                <CheckBox Grid.Column="1" Content="Laser" Name="chkbxL" IsHitTestVisible="False"/>
                <CheckBox Grid.Column="2" Content="Camera" Name="chkbxC" IsHitTestVisible="False"/>
            </Grid>
            <Grid Margin="10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <CheckBox Grid.Column="0" Content="IMU" Name="chkbxI" HorizontalAlignment="Center" IsHitTestVisible="False" />
                <CheckBox Grid.Column="1" Content="Encoder" Name="chkbxE" HorizontalAlignment="Center" IsHitTestVisible="False"/>
            </Grid>
            <TextBox Name="txtFName" Margin="10 0" Padding="2" />
            <Grid Margin="10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <Button Content="Tripping Hazard" Name="btnTrippingHazard" Margin="0,10,10,10" Padding="5" ScrollViewer.CanContentScroll="True" Click="btnTrippingHazard_Click" />
                    <Button Content="Vegetation " Name="btnVegetation" Margin="0,10,10,10" Padding="5" ScrollViewer.CanContentScroll="True" Click="btnVegetation_Click" />
                    <Button Content="Start " x:Name="pmStart" Margin="0,10,10,10" Padding="5" ScrollViewer.CanContentScroll="True" Click="OnStart" />
                </StackPanel>
                <StackPanel Grid.Column="1">
                    <Button Content="Broken Sidewalk" Name="btnBrokenSidewalk" Margin="10,10,0,10" Padding="5" ScrollViewer.CanContentScroll="True" Click="btnBrokenSidewalk_Click"  />
                    <Button Content="Other" Name="btnOther" Margin="10,10,0,10" Padding="5" ScrollViewer.CanContentScroll="True" Click="btnOther_Click" />
                    <Button Content="Stop" Name="btnStop" Margin="10,10,0,10" Padding="5" ScrollViewer.CanContentScroll="True" Click="OnStop" />
                </StackPanel>
            </Grid>
            <Button Content="Restart Service" Name="btnRestart" Margin="10" Padding="5" Click="btnRestart_Click"></Button>
            
        </StackPanel>
        
        <StackPanel Grid.Column="1" VerticalAlignment="Center" x:Name="PostRunControlsPanel" Visibility="Hidden">
            <TextBlock HorizontalAlignment="Center" Margin="0,10" FontSize="16">Post-Run Controls</TextBlock>
            <Grid Margin="10 10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button Content="Review Images" x:Name="reviewBtn" Grid.Column="0" Margin="0,10,10,10" Padding="5,15" Click="reviewBtn_Click" FontSize="18" />
                <Button Content="Discard Run" x:Name="discardBtn" Grid.Column="1" Margin="10,10,0,10" Padding="5,15" Click="btnRestart_Click" FontSize="18" />
            </Grid>
            <Button Content="Submit Run" x:Name="submitBtn" Margin="10" Padding="15" Click="btnRestart_Click" FontSize="18" />
        </StackPanel>
    </Grid>
</Window>
